# ============================================
# ExcelMind AI 环境变量配置示例
# ============================================
# 复制此文件为 .env.local 并填入实际值
# 注意: .env.local 文件已在 .gitignore 中,不会被提交到版本控制

# ============================================
# AI服务配置
# ============================================

# 智谱AI API密钥 (必填)
# 获取地址: https://open.bigmodel.cn/
ZHIPU_API_KEY=your-secret-key-here

# AI速率限制配置 (可选)
# AI_RATE_LIMIT: 时间窗口内允许的最大请求数
# AI_RATE_WINDOW: 速率限制时间窗口(毫秒)
AI_RATE_LIMIT=100
AI_RATE_WINDOW=60000

# AI模型配置 (可选)
# 默认使用 glm-4.6
AI_MODEL=glm-4.6
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# ============================================
# 服务器配置
# ============================================

# 服务器端口
PORT=3001

# Node环境 (development | production | test)
NODE_ENV=development

# API版本
API_VERSION=2.0.0

# ============================================
# 数据库配置 (可选,未来扩展)
# ============================================

# MySQL数据库连接
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=excelmind_ai
# DB_USER=root
# DB_PASSWORD=your-password

# Redis缓存 (可选)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# 安全配置
# ============================================

# JWT密钥 (用于认证)
# JWT_SECRET=your-jwt-secret-here

# CORS允许的源 (开发环境)
# 多个源用逗号分隔
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# 认证配置
# ============================================

# 是否启用API认证 (true | false)
AUTH_ENABLED=false

# API密钥列表 (多个用逗号分隔)
# API_KEYS=your-api-key-1,your-api-key-2

# API密钥请求头名称
API_KEY_HEADER=X-API-Key

# ============================================
# 日志配置
# ============================================

# 日志级别 (debug | info | warn | error)
LOG_LEVEL=info

# ============================================
# 文件上传配置
# ============================================

# 最大文件上传大小 (字节)
MAX_FILE_SIZE=10485760

# 允许的文件类型
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# ============================================
# 速率限制配置
# ============================================

# IP速率限制 (每分钟请求数)
IP_RATE_LIMIT=100
IP_RATE_WINDOW=60000

# 用户速率限制 (每分钟请求数)
USER_RATE_LIMIT=200
USER_RATE_WINDOW=60000

# ============================================
# WebSocket配置
# ============================================

# WebSocket端口
WS_PORT=3002

# ============================================
# 监控和分析 (可选)
# ============================================

# 启用性能监控
ENABLE_MONITORING=true

# 启用错误报告
ENABLE_ERROR_REPORTING=true
